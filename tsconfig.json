{
  "include": ["src/**/*.ts", "tools/**/*.ts", "tests/**/*.ts"],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "outDir": "build",
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "#src/*": ["./src/*"]
    }
  }
}
