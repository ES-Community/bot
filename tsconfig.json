{
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "useUnknownInCatchVariables": false,
    "outDir": "build",
    "moduleResolution": "Node16",
    "module": "Node16",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true
  }
}
