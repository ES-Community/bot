{
  "name": "esc-bot",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "check-types": "tsc --noEmit",
    "heroku-postbuild": "npm run build",
    "format": "prettier --write src tests",
    "lint": "eslint src --ext ts",
    "lint-fix": "npm run lint -- --fix",
    "start": "nodemon --watch \"src/**/*.ts\" -e ts --exec \"ts-node src/bot.ts | pino-pretty\"",
    "test": "npm run test-only && npm run lint && npm run check-types",
    "test-only": "jest",
    "test-coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ES-Community/bot.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ES-Community/bot/issues"
  },
  "homepage": "https://github.com/ES-Community/bot#readme",
  "dependencies": {
    "cron": "^1.8.2",
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "emoji-regex": "^9.2.2",
    "got": "^11.8.2",
    "html-entities": "^2.3.2",
    "pino": "^6.11.3"
  },
  "devDependencies": {
    "@types/cron": "^1.7.2",
    "@types/emoji-regex": "^8.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.0",
    "@types/pino": "^6.3.8",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.27.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.8.0",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": "16.x"
  },
  "volta": {
    "node": "16.2.0"
  }
}
