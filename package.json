{
  "name": "esc-bot",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "check-format": "prettier --check .",
    "check-types": "tsc --noEmit",
    "heroku-postbuild": "npm run build",
    "format": "prettier --write .",
    "lint": "eslint src --ext ts",
    "lint-fix": "npm run lint -- --fix",
    "start": "nodemon --watch \"src/**/*.ts\" -e ts --exec \"ts-node -r dotenv/config src/bot.ts\"",
    "test": "npm run test-only && npm run lint && npm run check-types && npm run check-format",
    "test-only": "jest",
    "test-coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ES-Community/bot.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ES-Community/bot/issues"
  },
  "homepage": "https://github.com/ES-Community/bot#readme",
  "dependencies": {
    "better-sqlite3": "^7.6.2",
    "cron": "^2.1.0",
    "discord.js": "^14.6.0",
    "dotenv": "^16.0.3",
    "emoji-regex": "^10.2.1",
    "got": "^11.8.5",
    "html-entities": "^2.3.3",
    "knex": "^2.3.0",
    "node-html-parser": "^6.1.1",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1"
  },
  "devDependencies": {
    "@types/cron": "^2.0.0",
    "@types/emoji-regex": "^8.0.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.3",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.26.0",
    "jest": "^29.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "18.x"
  },
  "volta": {
    "node": "18.11.0"
  }
}
